<script type="text/javascript">
  jQuery(document).ready(function(){
    jQuery('.js-embed').on('click', function() {
      var terminal = $('.terminal');
      htmlAsText = $("<input type=text value='<iframe frameborder=\"0\" src=\"" + window.location.href + "/raw\" width=\"" + parseInt(terminal.innerWidth()) + "\" height=\"" + parseInt(terminal.innerHeight()) + "\"></iframe>'>");
      jQuery(this).replaceWith(htmlAsText);
      htmlAsText.select();
    });

    AsciiIo.current_user = <%= raw current_user.to_json(:only => [:id, :nickname, :avatar_url]) %>;
  });


</script>
