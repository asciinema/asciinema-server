<% cache ['thumbnail', asciicast] do %>
  <div class="presentation">
    <%= link_to asciicast, :class => 'preview-link' do %>
      <div class="play-button"><div class="arrow">â–º</div></div>
      <pre class="preview"><%= asciicast.thumbnail(28, 9) %></pre>
    <% end -%>

    <div class="info">
      <h3>
        <%= link_to asciicast.title, asciicast %>
      </h3>

      <p class="date">
        <%= time_ago_tag asciicast.created_at %> by <%= asciicast.author_profile_link %>
      </p>
    </div>
  </div>
<% end -%>
